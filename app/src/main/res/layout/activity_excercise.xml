<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.johnpconsidine.bengalworkouts.ExcerciseActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width= "match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/exerciseToolbar"

        android:background="@color/appTheme"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/workoutTitles"
        android:layout_below="@id/exerciseToolbar"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/appTheme"
        android:layout_width="match_parent" />
    <android.support.v4.view.ViewPager
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/exerciseViewPager"
        android:layout_below="@id/workoutTitles"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
