<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
                android:background="@color/white"
             android:layout_height="match_parent"
             tools:context="com.example.johnpconsidine.bengalworkouts.Fragments.NewExercise">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="30dp"
        android:id="@+id/imageLayout"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:id="@+id/uploadImage"
            android:src="@drawable/arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadImage"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="UPLOAD IMAGES"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/divider1"
        android:layout_below="@id/imageLayout"
        android:background="@color/appTheme"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/divider1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:id="@+id/topPanel"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="3">


        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/timeTextView"
                android:textSize="15sp"
                android:text="TYPE"
                android:textColor="@color/themeOrange"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/timeTextView"
                android:layout_height="wrap_content"
                android:id="@+id/typeTextView"
                android:layout_centerHorizontal="true"
                android:text="LEGS"
                android:textColor="@color/themeOrange"/>



        </RelativeLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/appTheme"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/difficultyTextView"
                android:textSize="15sp"
                android:text="DIFFICULTY"
                android:textColor="@color/themeOrange"/>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_below="@id/difficultyTextView"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_alignParentEnd="true"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/appTheme"
        android:layout_below="@+id/topPanel"
        android:id="@+id/divider2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:textSize="25sp"
        android:text="KEY TECHNIQUE POINTERS"
        android:id="@+id/messageLabel"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/messageText"
        android:paddingStart="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@id/messageLabel"
        android:text="type info here..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/sendText"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:textColor="@color/colorAccent"/>



</RelativeLayout>
